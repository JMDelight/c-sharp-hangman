<h1 class="page-header">Welcome to the Hangman Game!</h1>
<h2>You have guessed @Model.GetTurnCount() times...</h2>
<!-- <p>@Model.GetGameWord()</p> -->
<h2>@Model.GetWordToDisplayString()</h2>
<h2>Letters guessed</h2>
<p>@Model.GetLettersGuessedString()</p>
<form class="form-group" action="/" method="post">
  <p>Guess a Letter!<input type="text" class="form-control"name="letter-guess" id="letter-guess" required="true" pattern="[a-z]" title="must contain only one lowercase letter" autofocus></p>
  <button type="submit" class="btn btn-success" name="guess-btn">Guess!</button>
</form>
